<div class="header-cocktail" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key %>')">
  <h2><%= @cocktail.name.downcase.split.map(&:capitalize).join(' ') %></h2>
</div>

<div class="container container-show">
  <div class="col-6 list-description">
    <div>
      <h5><strong>Measures</strong></h5>
      <% @cocktail.doses.each do |dose| %>
        <p><%= dose.ingredient.name %> - <%= dose.description %> <%= link_to 'ğŸ—‘',
        dose_path(dose),
        method: :delete,
        data: { confirm: "Are you sure?"} %></p>
      <% end %>
    </div>

    <div class="back-button">
      <%= link_to "Back", cocktails_path, class: "btn" %>
    </div>
  </div>

  <div class="col-6 form-dose">

    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient %>
      <div>
        <%= f.submit 'Add a new dose', class: 'btn' %>

      </div>
    <% end %>
  </div>
</div>














