<div class="header">
  <h1>Marioneta's Cocktail List</h1>
</div>



<div class="container">
  <div class="modal-button">
    <button type="button" class="btn" data-toggle="modal" data-target="#exampleModal">
      Add a new cocktail
    </button>
  </div>

  <div class="card-grid">
    <% @cocktails.each do |cocktail| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key %>')">
          <%= link_to cocktail.name.downcase.split.map(&:capitalize).join(' '), cocktail_path(cocktail), class: "cocktail-link" %>
        </div>
    <% end %>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="newCocktailModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newCocktailModalLabel">New Cocktail</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>

          </div>
          <%= simple_form_for @cocktail do |f| %>
          <div class="modal-body">
            <%= f.input :name %>
            <%= f.input :photo, as: :file %>
          </div>
          <div class="modal-footer">
            <%= f.submit %>
         <% end %>

        </div>
    </div>
  </div>
</div>
