<div class="header">
  <h1>Marioneta's Cocktail List</h1>
</div>

<div class="container">
  <div class="card-grid">
    <% @cocktails.each do |cocktail| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key %>')">
          <%= link_to cocktail.name.downcase.split.map(&:capitalize).join(' '), cocktail_path(cocktail), class: "cocktail-link" %>
        </div>
    <% end %>
  </div>

  <div>
    <%= simple_form_for @cocktail do |f| %>
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
    <%= f.submit %>
    <% end %>
</div>
</div>
