<div class="header">
  <h1>Marioneta's Cocktail List</h1>
</div>

<div class="container">
  <div class="modal-button">
    <button type="button" class="btn" data-toggle="modal" data-target="#exampleModal">
      Add a new cocktail
    </button>
  </div>

  <div class="card-grid">
    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail), class: "link-card" do  %>
        <div class="card-animation">
          <div class="card-category-front" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key %>')">
            <p class="cocktail-link"><%= cocktail.name.downcase.split.map(&:capitalize).join(' ') %></p>
          </div>
          <div class="card-category-back" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key %>')">
            <p class="cocktail-link"><%= cocktail.name.downcase.split.map(&:capitalize).join(' ') %></p>
            <p>ğŸ¤™ğŸ¼</p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<%= render 'modal-new-cocktail' %>


